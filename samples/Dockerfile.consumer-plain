FROM maven:3.9-eclipse-temurin-21 AS build
WORKDIR /workspace
COPY samples/consumer-plain/pom.xml samples/consumer-plain/pom.xml
COPY samples/consumer-plain/src samples/consumer-plain/src
RUN mvn -f samples/consumer-plain/pom.xml -q package -DskipTests

FROM eclipse-temurin:21-jre
WORKDIR /app
COPY --from=build /workspace/samples/consumer-plain/target/consumer-plain-*.jar app.jar
EXPOSE 8082
ENTRYPOINT ["java","-jar","/app/app.jar"]
